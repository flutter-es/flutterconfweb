{
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cross-Origin-Embedder-Policy",
            "value": "require-corp"
          },
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": "same-origin"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/icons/icon-192.png",
        "destination": "/icons/icon-192.png"
      },
      {
        "source": "/icons/icon-512.png",
        "destination": "/icons/icon-512.png"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}